{
  // Editor specific settings
  "editor.accessibilitySupport": "off",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "editor.guides.bracketPairs": "active",
  "editor.formatOnSave": true,
  "editor.fontWeight": "500",
  "editor.fontSize": 14,
  "explorer.confirmDragAndDrop": false,
  "application.shellEnvironmentResolutionTimeout": 60,
  "git.openRepositoryInParentFolders": "never",
  "security.workspace.trust.untrustedFiles": "open",
  // Terminal specific settings
  "terminal.integrated.fontFamily": "SourceCodePro Nerd Font",
  "terminal.integrated.fontWeight": "500",
  // Extension specific settings
  "prettier.printWidth": 140,
  "prettier.singleQuote": true,
  "prettier.requireConfig": true,
  "gitlens.hovers.currentLine.over": "line",
  // UI specific settings
  "material-icon-theme.folders.color": "#fdd835",
  "material-icon-theme.folders.theme": "none",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "GitHub Dark Dimmed",
  "extensions.ignoreRecommendations": true,
  // Language specific settings
  "[python]": {
    "editor.formatOnType": true
  },
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // Vim specific settings
  "editor.lineNumbers": "relative",
  "vim.leader": "space",
  "workbench.startupEditor": "none",
  "vim.useSystemClipboard": true,
  // Copilot settings
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  // To improve vim extension performance
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1,
    "asvetliakov.vscode-neovim": 1
  },
  "files.autoSave": "afterDelay"
}